# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tuntasinaja?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Cron Job Secret (optional, for securing cron endpoints)
CRON_SECRET="your-cron-secret-key-here"

# Node Environment
NODE_ENV="development"

# App Update Configuration
# Set APP_UPDATE_ENABLED to 'false' to disable update notifications for users
# When disabled, users won't see update dialog even if new version is available
# Default: 'true' (updates enabled)
APP_UPDATE_ENABLED="true"

# App Version Info (for update notifications)
APP_VERSION_CODE="6"
APP_VERSION_NAME="1.5"
APP_DOWNLOAD_URL="https://tuntasinaja-livid.vercel.app/api/app/download"
APP_RELEASE_NOTES="Update terbaru dengan perbaikan bug dan fitur baru"
APP_FORCE_UPDATE="false"

# Web Push VAPID Keys (generate with: npm run generate:vapid-keys)
VAPID_PUBLIC_KEY="your-vapid-public-key-here"
VAPID_PRIVATE_KEY="your-vapid-private-key-here"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key-here"

# Password Encryption Key (32 characters minimum, untuk encrypt password di database)
# Generate dengan: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PASSWORD_ENCRYPTION_KEY="your-password-encryption-key-32-chars-minimum-change-in-production"

